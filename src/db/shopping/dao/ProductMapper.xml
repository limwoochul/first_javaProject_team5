<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="db.shopping.dao.ProductDAO">
	<resultMap type="CartVO" id="CartMap">
		<id property="ca_num" column="ca_num"/>
		
		<collection property="product" ofType="ProductVO" column="ca_pr_num" select="selectProduct"/>
	</resultMap>
    
	<select id="selectCategoryList" resultType="CategoryVO">
		select * from category
	</select>
	<select id="selectProductList" resultType="ProductVO">
		select * from product where pr_cg_num = #{cg_num}
	</select>
	
	<select id="selectCart" resultType="CartVO">
		select * from cart where ca_me_id = #{me_id} and ca_pr_num = #{pr.pr_num}
	</select>
	<update id="updateCart">
		update cart set ca_amount = ca_amount + #{pr.pr_inventory} where ca_me_id = #{me_id} and ca_pr_num = #{pr.pr_num}
	</update>
	
	<insert id="insertCart">
		insert into cart(ca_amount, ca_me_id, ca_pr_num)
		values(#{pr.pr_inventory}, #{me_id}, #{pr.pr_num})
	</insert>
	
	<select id="selectCartList" resultMap="CartMap">
		select * from cart where ca_me_id = #{me_id}
	</select>
	<select id="selectProduct" resultType="ProductVO">
		select * from product where pr_num = #{pr_num}
	</select>

</mapper>